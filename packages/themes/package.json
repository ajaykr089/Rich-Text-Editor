{
  "name": "@editora/themes",
  "version": "1.0.5",
  "description": "Themes and styling system for Editora Rich Text Editor with light/dark mode support",
  "author": "Ajay Kumar <ajaykr089@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ajaykr089/Editora.git",
    "directory": "packages/themes"
  },
  "homepage": "https://github.com/ajaykr089/Editora#readme",
  "bugs": {
    "url": "https://github.com/ajaykr089/Editora/issues"
  },
  "keywords": [
    "themes",
    "styling",
    "css",
    "dark-mode",
    "light-mode",
    "design-system",
    "css-variables"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "index.d.ts",
  "style": "src/index.css",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./themes/*": "./src/themes/*.css",
    "./themes/default.css": "./src/themes/default.css",
    "./themes/dark.css": "./src/themes/dark.css",
    "./themes/acme.css": "./src/themes/acme.css"
  },
  "files": [
    "dist",
    "index.d.ts",
    "src/*.css",
    "src/themes/*.css",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^7.3.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "694494db58b809f0dcf24501696284faa1ab68a5"
}
