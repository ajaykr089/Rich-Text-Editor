{
  "name": "@editora/light-code-editor",
  "version": "1.0.4",
  "description": "Lightweight, extensible code editor for the web â€” syntax highlighting, line numbers, code folding, and a plugin-friendly API. Ideal for embedding in docs, demos, and web apps.",
  "authors": [
    "Ajay Kumar <ajaykr089@gmail.com>"
  ],
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.css",
    "dist/**/*.d.ts",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:types",
    "build:js": "vite build",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly --noEmit false --outDir dist",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "code-editor",
    "lightweight-editor",
    "syntax-highlighting",
    "javascript-editor",
    "typescript-editor",
    "web-editor",
    "code-playground",
    "line-numbers",
    "code-folding",
    "plugin-friendly"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ajaykr089/Editora.git",
    "directory": "packages/light-code-editor"
  },
  "homepage": "https://github.com/ajaykr089/Editora#readme",
  "bugs": {
    "url": "https://github.com/ajaykr089/Editora/issues"
  },
  "style": "dist/light-code-editor.css",
  "publishConfig": {
    "access": "public"
  },
  "author": "Ajay Kumar <ajaykr089@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.3.1"
  },
  "gitHead": "694494db58b809f0dcf24501696284faa1ab68a5"
}
