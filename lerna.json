{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.0.1",
  "packages": [
    "packages/*"
  ],
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org/",
      "access": "public",
      "ignoreChanges": [
        "**/*.md",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/stories/**"
      ]
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): bump version to %s",
      "allowBranch": [
        "main",
        "develop"
      ]
    }
  }
}