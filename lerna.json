{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.0.0",
  "packages": [
    "packages/*"
  ],
  "npmClient": "npm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): bump version to %s"
    }
  }
}