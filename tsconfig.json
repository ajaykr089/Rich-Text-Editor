{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@editora/core": ["packages/core/src"],
      "@editora/toast": ["packages/editora-toast/src"],
      "@editora/react": ["packages/react/src"],
      "@editora/icons": ["packages/icons/src"],
      "@editora/react-icons": ["packages/react-icons/src"],
      "@editora/themes": ["packages/themes/src"],
      "@editora/plugins": ["packages/plugins"],
      "@editora/plugins/*": ["packages/plugins/*/src"],
      "@editora/light-code-editor": ["packages/light-code-editor/src"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "packages/plugins/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
